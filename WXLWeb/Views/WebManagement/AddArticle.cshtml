@{
    Layout = null;
}

<!DOCTYPE html>
@model WXLWeb.Models.Article
<html>
<head>
    <meta name="viewport" content="width=device-width" />
     <link rel="Shortcut Icon" href="/Images/title.ico" />
    <title>新增随笔</title>
    <script src="~/Plug/Kindeditor/kindeditor-min.js"></script>
    <script src="~/Plug/Kindeditor/lang/zh_CN.js"></script>
  <script >
      KindEditor.ready(function (K) {
          K.create('#editor_id', {
              cssPath: '../Plug/Kindeditor/plugins/code/prettify.css',//样式
              uploadJson: '../Plug/Kindeditor/asp.net/upload_json.ashx',//图片上传
              fileManagerJson: '../Plug/Kindeditor/asp.net/file_manager_json.ashx',//图片管理
              allowFileManager: true  //允许使用文件管理
          });
      });
    </script>
</head>
<body>
   @using(Html.BeginForm("AddArticle","WebManagement",FormMethod.Post)){ 
       <p >标题:@Html.TextBoxFor(a=>a.Title)</p>
    <p>正文:</p>
    <div>
        @Html.TextAreaFor(a=>a.ContentTxt,new {id="editor_id",name="content",style="width:700px;height:300px;"})
       @* <textarea id="editor_id" name="content" style="width:700px;height:300px;">*@
           
@*</textarea>*@
    </div>
       <p>类别:@Html.RadioButtonFor(a => a.Type1, 1, new { @checked = "true" })技术篇
           @Html.RadioButtonFor(a => a.Type1, 2)生活篇
           @Html.RadioButtonFor(a => a.Type1, 3)学海无涯
       </p>
       <p>分类:@Html.TextBoxFor(a=>a.Type2)</p>
       <p>标签:@Html.TextBoxFor(a=>a.Tag,new {style="width:200px;"})
           <span style="font-size:12px; font-family:'宋体';color:#808080">多个标签用","隔开.如:html,css</span></p>
       <p style="padding-left:40px;"><input type="submit" value="提交" /></p>
    }
</body>
</html>
