@{
    Layout = null;
}

<!DOCTYPE html>
@model WXLWeb.Models.Article
<html>
<head>
    <meta name="viewport" content="width=device-width" />
     <link rel="Shortcut Icon" href="/Images/title.ico" />
    <title>新增随笔</title>
    <script src="~/Plug/Ueditor/third-party/SyntaxHighlighter/shCore.js"></script>
  <!-- 配置文件 -->
   <script src="~/Plug/Ueditor/ueditor.config.js"></script>
    <!-- 编辑器源码文件 -->
    <script src="~/Plug/Ueditor/ueditor.all.min.js"></script>
   <!-- 实例化编辑器 -->
    <script type="text/javascript">
        window.onload = function () {
            //initialFrameWidth这个参数是宽跟当前窗口自动改变大小
            var ue = UE.getEditor('container', { initialFrameWidth: null });
        }
        $(function () {
            SyntaxHighlighter.highlight();
        });
    </script>
</head>
<body>
    <div style="margin-bottom:20px;color:#808080; font-size:12px;">当前位置:<span class="sp_blank txtDefault">文章管理</span><span class="sp_blank"> > </span> <span class="sp_blank txtDefault">写文章</span></div>
    <div style="padding-left:50px; margin-bottom:40px;"><span style="font-size:12px;color:#808080;">欢迎用户:</span><span style="color:#0094ff">@Model.UserName</span></div>
   @using(Html.BeginForm("AddArticle","WebManagement",FormMethod.Post)){ 
       <p >标题:@Html.TextBoxFor(a=>a.Title)</p>
    <p>正文:</p>
    <div>
       <!-- 加载编辑器的容器 -->
    <script id="container" name="content" style="max-width:800px; type="text/plain">

    </script>
    </div>
       <p>类别:@Html.RadioButtonFor(a => a.Type1, 1, new { @checked = "true" })技术篇
           @Html.RadioButtonFor(a => a.Type1, 2)生活篇
           @Html.RadioButtonFor(a => a.Type1, 3)学海无涯
       </p>
       <p>分类:@Html.TextBoxFor(a=>a.Type2)</p>
       <p>标签:@Html.TextBoxFor(a=>a.Tag,new {style="width:200px;"})
           <span style="font-size:12px; font-family:'宋体';color:#808080">多个标签用","隔开.如:html,css</span></p>
       <p style="padding-left:40px;"><input type="submit" value="提交" /></p>
    }
</body>
</html>
